<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to({:controller => 'rates', :action => 'convert'}) do %>
      <button type="button" class="btn btn-sm btn-outline-secondary">Back</button>
      <% end %>
    </div>
  </div>
</div>

<div class="card text-center shadow p-3 mb-5 bg-white rounded">
  <div class="card-body ">
    <div class="d-flex justify-content-center">
      <div class="field form-group ">
      <br>
      <% if @response["success"] == true %>
        <div class="container">
          <% text = "#{number_to_currency(@response["amount"], unit: "")} #{@response["from"]} = #{number_to_currency(@response["result"], unit: "")} #{@response["to"]}" %>
          <h6> <%= text %> </h6>
          <% text = "on #{@response["date"]} rate: #{@response["rate"]}" %>
          <p> <%= text %> </p>
      <% else %>
        <p> Error occurred, response was not successful </p>
      <% end %>
    </div>
  </div>
  </div>
</div>