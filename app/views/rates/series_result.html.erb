<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to({:controller => 'rates', :action => 'series'}) do %>
      <button type="button" class="btn btn-sm btn-outline-secondary">Back</button>
      <% end %>
    </div>
  </div>
</div>
<h2>Timeseries</h2>
<div class="container ">
<% if @response["success"] == true %>
<%= area_chart(@response["series"], precision: 5) %>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Rate</th>
        <th scope="col">From</th>
        <th scope="col">To</th>
      </tr>
    </thead>
    <tbody>
      <% @response["series"].each do | key, value | %>
      <tr>
        <td> <%= key %> </td>
        <td> <%= value %> </td>
        <td> <%= @response["from"] %></td>
        <td> <%= @response["to"] %> </td>
      </tr>
        <% end %>
      </tbody>
    </table>
</div>
<% else %>
<div class="container">
  <p> Error occurred, response was not successful  </p>
</div>
<% end %>

